<!-- 设置不同形状的机器人部件-->
   <robot name="mycar">
        <link name="base_link">
            <visual>
                <!-- 形状 -->
                <geometry>
                    <!-- 1.1长方体的长宽高 -->
                    <box size="0.5 0.3 0.1" />
                    <!-- 1.2圆柱，半径和长度 -->
                    <!-- <cylinder radius="0.5" length="0.1" /> -->
                    <!-- 1..3球体，半径-->
                    <!-- <sphere radius="0.3" /> -->

                    <!--  1.4皮肤-->
                    <!-- <mesh    filename="package://urdf01_rviz/meshes/autolabor_mini.stl" /> -->
                </geometry>
                <!-- xyz坐标 rpy翻滚俯仰与偏航角度(3.14=180度 1.57=90度) -->
                <origin xyz="0 0 0" rpy="1.57 0 1.57" />
                <!-- 颜色: r=red g=green b=blue a=alpha 透明度,四者取值[0,1] ,透明度为0时全透明-->
                <material name="black">
                    <color rgba="0.1 0.9 0.1 0.5" />
                </material>
            </visual>
        </link>
</robot>
